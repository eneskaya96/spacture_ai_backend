[program:ffmpeg]
command=/usr/bin/ffmpeg -i rtsp://.... -c:v libx264 -c:a aac -f hls -hls_time 10 -hls_list_size 0 -hls_segment_filename '/var/www/hls/segment%%d.ts' '/var/>
autostart=true
autorestart=true
stderr_logfile=/var/log/supervisor/ffmpeg.err.log
stdout_logfile=/var/log/supervisor/ffmpeg.out.log
